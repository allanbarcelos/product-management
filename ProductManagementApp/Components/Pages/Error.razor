@page "/Error"
@using System.Diagnostics
@inject IStringLocalizer<Error> L

<PageTitle>@L["ErrorPageTitle"]</PageTitle>

<h1 class="text-danger">@L["ErrorHeading"]</h1>
<h2 class="text-danger">@L["ErrorSubHeading"]</h2>

@if (ShowRequestId)
{
    <p>
        <strong>@L["ShowRequestIdLabel"]</strong> <code>@RequestId</code>
    </p>
}

<h3>@L["DevelopmentMode"]</h3>
<p>@T("ErrorDevModeInfo")</p>
<p>
    <strong>@L["DevelopmentWarning"]</strong>
    @T("ErrorDevWarningDetail")
</p>

@code{
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;

    private MarkupString T(string key) => 
        (MarkupString)L[key].Value;
}
